<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col">
      <h1>Articles</h1>

        <%= cl_image_tag("u0dkl66ktjs1wio3n2x8", alt: "San Francisco", width: 400, height: 300, crop: :fill) %>

        <!-- for face detection -->
        <%= cl_image_tag("kfkgrjc5aj1v74h2zzn9", alt: "Boris", width: 150, height: 150, crop: :thumb, gravity: :face) %>

        <div id="articles">
          <% @articles.each do |article| %>
            <%= render article %>
            <p>
              <%= link_to "Show this article", article %>
            </p>
          <% end %>
        </div>

        <%= link_to "New article", new_article_path %>

    </div>
  </div>
</div>
